@model List<ProjetWeb.MODEL.GenreModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";

}

<h2>Index</h2>

<p type="button" class="btn btn-success">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="dt-table">
    <thead>
        <tr>
            <th>
                <h4>ID Genre</h4>
            </th>
            <th>
                <h4>Nom Genre</h4>
            </th>
            <th>
                <h4>Description</h4>
            </th>
            <th>
                <h4>Purge</h4>
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id_genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nom_genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.purge)
                </td>
                <td>
                    <div type="button" class="btn btn-warning">
                        @Html.ActionLink("Edit", "Edit", new { id = item.id_genre })
                    </div>
                    <div type="button" class="btn btn-success">
                        @Html.ActionLink("Details", "Details", new { id = item.id_genre })
                    </div>
                    <div type="button" class="btn btn-danger">
                        @Html.ActionLink("Delete", "Delete", new { id = item.id_genre })
                    </div>
</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dt-table').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/French.json" }
            });
        });
    </script>
}