<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar  navbar-fixed-top">
        <div class="container-fluid">
            <div class="col-sm-2 col-md-2">
            </div>
            <div class="navbar-header col-sm-2 col-md-2">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nom de l'application", "Index", "HomeUtilisateur", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="col-sm-7 col-md-7">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "HomeUtilisateur")</li>
                    <li>@Html.ActionLink("Ligne_Reservation", "Index", "LigneResaUtilisateur")</li>
                    <li>@Html.ActionLink("Reservation", "Index", "ReservationUtilisateur")</li>
                    <li>@Html.ActionLink("Ressource", "Index", "RessourceUtilisateur")</li>
                </ul>
            </div>
            <div class="col-sm-1 col-md-1">
                <div type="button" value="Deconnexion" method="post" class="btn btn-default" style="margin-top:7%">
                    @Html.ActionLink("Deconnexion", "../Authentification/Index", "Authentification")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerydatetime")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquerydt")
    @RenderSection("scripts", required: false)
</body>
</html>
