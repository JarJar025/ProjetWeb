@model List<ProjetWeb.MODEL.RessourceModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p type="button" class="btn btn-success">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="dt-table">
    <thead>
        <tr>
            <th>
                <h4>Nom Ressource</h4>
            </th>
            <th>
                <h4>Disponibilité</h4>
            </th>
            <th>
                <h4>Description</h4>
            </th>
            <th>
                <h4>Date_Achat</h4>
            </th>
            <th>
                <h4>QRCode</h4>
            </th>
            <th>
                <h4>Nom Genre</h4>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom_Ressource)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Disponibilite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_Achat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QRCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom_Genre)
                </td>
                <td>
                    <div type="button" class="btn btn-warning">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID_Ressource })
                    </div>
                    <div type="button" class="btn btn-success">
                        @Html.ActionLink("Details", "Details", new { id = item.ID_Ressource })
                    </div>
                    <div type="button" class="btn btn-danger">
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID_Ressource })
                    </div>
</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dt-table').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/French.json" }
            });
        });
    </script>
}